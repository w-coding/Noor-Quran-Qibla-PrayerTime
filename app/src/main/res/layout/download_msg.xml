<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    android:padding="@dimen/_1sdp"
    app:cardCornerRadius="@dimen/_6sdp">

    <LinearLayout
        android:layout_width="@dimen/_225sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_nbb"
            android:layout_marginEnd="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="دابەزاندن دەستی پێکرد"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/rabar015" />

    </LinearLayout>
        <TextView
            android:id="@+id/txtSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 MB"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/rabar015" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_gravity="center"
        android:gravity="center"
        >


        <SeekBar
            android:id="@+id/seekBarDown"
            android:layout_gravity="center"
            android:layout_width="@dimen/_157sdp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/604"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="@font/rabar014"
            android:textColor="@color/textColorBlack"
            android:textSize="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_12sdp"/>


    </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>